<?xml version="1.0" encoding="UTF-8"?>
<bean:beans xmlns:bean="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="com.rochatec.pos.athena.persistence" />
    
    <bean:bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<bean:property name="dataSource" ref="dataSource" />
		<bean:property name="jpaVendorAdapter">
			<bean:bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<bean:property name="generateDdl" value="true" />
				<bean:property name="database" value="HSQL" />
			</bean:bean>
		</bean:property>
		<bean:property name="persistenceUnitName" value="AthenaPersistenceUnit" />
	</bean:bean>
    
    <bean:bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<bean:property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean:bean>
	
    <bean:bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <bean:property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <bean:property name="url" value="jdbc:hsqldb:file:athena"/>
        <bean:property name="username" value="sa"/>
        <bean:property name="password" value=""/>
    </bean:bean>

</bean:beans>
